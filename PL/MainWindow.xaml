<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="tempraryMain" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="91*"/>
            <ColumnDefinition Width="709*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/magnus-lunay-LHR6tUw8N34-unsplash.jpg"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="64*"/>
            <RowDefinition Height="321*"/>
            <RowDefinition Height="49*"/>
        </Grid.RowDefinitions>
        <Button x:Name="ProductForListButton" Content="View Our Products" Margin="3,6,0,0" VerticalAlignment="Top" FontSize="48" Click="ProductButton_Click" FontWeight="Bold" Foreground="#FFFFFBFB" Background="{x:Null}" HorizontalAlignment="Left" BorderThickness="0,0,0,0" BorderBrush="#FFEEEEEE" Width="776" Height="60" FontFamily="MV Boli" Grid.ColumnSpan="2" Grid.Row="1">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20"></Setter>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="MWcloseButton" Content="Close" HorizontalAlignment="Right" Margin="0,5,10,0" VerticalAlignment="Top" Width="74" Height="32" FontFamily="Candara" FontSize="16" Click="MWcloseButton_Click" Grid.Row="2" Grid.Column="1"/>
        <Image x:Name="Logo" Visibility="Visible" HorizontalAlignment="Left" Height="52" Margin="2,3,0,0" VerticalAlignment="Top" Width="93" Source="/magnus-lunay-LHR6tUw8N34-unsplash.jpg" Grid.Column="0" Grid.Row="0"/>
    </Grid>
</Window>

