<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="tempraryMain" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/magnus-lunay-LHR6tUw8N34-unsplash.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>
        <Button x:Name="ProductForListButton" Content="Products" Margin="0,54,0,0" VerticalAlignment="Top" FontSize="48" FontFamily="Maiandra GD" Click="ProductButton_Click" FontWeight="Bold" Foreground="#FFFFFBFB" Background="Black" HorizontalAlignment="Center" BorderThickness="0,0,0,0" BorderBrush="#FFEEEEEE" Width="224" Height="60">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20"></Setter>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="MWcloseButton" Content="Close" HorizontalAlignment="Right" Margin="0,5,10,0" VerticalAlignment="Top" Width="74" Height="32" FontFamily="Candara" FontSize="16" Click="MWcloseButton_Click" Grid.Row="1"/>

    </Grid>
</Window>

