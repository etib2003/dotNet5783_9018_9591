<Window x:Class="Cart.CustomerDetailsWindow" Style="{StaticResource {x:Type Window}}"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cart"
        mc:Ignorable="d"
        Title="CustomerDetailsWindow" Height="400" Width="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250*"/>
            <ColumnDefinition Width="250*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="78*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="94*"/>
        </Grid.RowDefinitions>
        <Label x:Name="NameLabel" Content="Name:" HorizontalAlignment="Left" Height="30" Grid.Row="1" Width="191" FontFamily="Candara" VerticalAlignment="Center" Margin="159,0,0,0" FontSize="18"/>
        <Label x:Name="EmailLabel" Content="Email:" HorizontalAlignment="Left" Height="30" Grid.Row="2" VerticalAlignment="Center" Width="191" FontFamily="Candara" Margin="159,0,0,0" FontSize="18"/>
        <Label x:Name="AddressLabel" Content="Address:" HorizontalAlignment="Left" Height="30" Grid.Row="3" VerticalAlignment="Center" Width="191" FontFamily="Candara" Margin="159,0,0,0" FontSize="18"/>
        <Label x:Name="CardNumLabel" Content="Credit card number:" HorizontalAlignment="Left" Height="30" Grid.Row="4" VerticalAlignment="Center" Width="191" FontFamily="Candara" Margin="159,0,0,0" FontSize="18"/>
        <Label x:Name="CvvLabel" Content="CVV:" HorizontalAlignment="Left" Height="30" Grid.Row="5" VerticalAlignment="Center" Width="191" FontFamily="Candara" Margin="159,0,0,0" FontSize="18"/>
        <Label x:Name="ValidityLabel" Content="Card validity:" HorizontalAlignment="Left" Height="30" Grid.Row="6" VerticalAlignment="Center" Width="191" FontFamily="Candara" Margin="159,0,0,0" FontSize="18"/>
        <TextBox x:Name="NameTB" Grid.Column="1" HorizontalAlignment="Left" Height="20" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="133" Margin="37,3,0,0" FontFamily="Candara" FontSize="14"/>
        <TextBox x:Name="EmailTB" Grid.Column="1" HorizontalAlignment="Left" Height="20" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="133" Margin="37,3,0,0" FontFamily="Candara" FontSize="14"/>
        <TextBox x:Name="AddressTB" Grid.Column="1" HorizontalAlignment="Left" Height="20" Grid.Row="3" TextWrapping="Wrap" VerticalAlignment="Top" Width="133" Margin="37,3,0,0" FontFamily="Candara" FontSize="14"/>
        <TextBox x:Name="CardNumberTB" Grid.Column="1" HorizontalAlignment="Left" Height="20" Grid.Row="4" TextWrapping="Wrap" VerticalAlignment="Top" Width="133" Margin="37,3,0,0" FontFamily="Candara" FontSize="14"/>
        <TextBox x:Name="CvvTB" Grid.Column="1" HorizontalAlignment="Left" Height="20" Grid.Row="5" TextWrapping="Wrap" VerticalAlignment="Top" Width="133" Margin="37,3,0,0" FontFamily="Candara" FontSize="14"/>
        <TextBox x:Name="ValidityTB" Grid.Column="1" HorizontalAlignment="Left" Height="20" Grid.Row="6" TextWrapping="Wrap" VerticalAlignment="Top" Width="133" Margin="37,3,0,0" FontFamily="Candara" FontSize="14"/>
        <Label x:Name="DetailLabel" Content="Customer Details" HorizontalAlignment="Left" Height="34" Margin="218,0,0,0" VerticalAlignment="Center" Width="266" HorizontalContentAlignment="Center" FontWeight="Bold" FontSize="22" FontFamily="Candara" Grid.ColumnSpan="2"/>
        <Button x:Name="endOrderbutton" Content="Complete order payment" HorizontalAlignment="Left" Margin="240,0,0,0" Grid.Row="7" VerticalAlignment="Center" FontFamily="Candara" FontWeight="Bold" FontSize="19" Click="endOrderbutton_Click" Height="27" Width="222" Grid.ColumnSpan="2"/>
        <Label x:Name="NoName" Grid.Column="1" Content="*Please enter details" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="24" Width="88" FontFamily="Candara" Foreground="Red" FontSize="9" Grid.Row="1" LostFocus="LoseFocus" Margin="84,0,0,32" Grid.RowSpan="2"/>
        <Label x:Name="NoAddress" Grid.Column="1" Content="*Please enter details" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="24" Width="88" FontFamily="Candara" Foreground="Red" FontSize="9" Grid.Row="3" Margin="84,0,0,32" Grid.RowSpan="2"/>
        <Label x:Name="NoCardNumber" Grid.Column="1" Content="*Please enter details" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="24" Width="88" FontFamily="Candara" Foreground="Red" FontSize="9" Grid.Row="4" Margin="84,0,0,32" Grid.RowSpan="2"/>
        <Label x:Name="NoCvv" Grid.Column="1" Content="*Please enter details" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="24" Width="88" FontFamily="Candara" Foreground="Red" FontSize="9" Grid.Row="5"  Margin="84,0,0,32" Grid.RowSpan="2"/>
        <Label x:Name="NoValidity" Grid.Column="1" Content="*Please enter details" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="24" Width="88" FontFamily="Candara" Foreground="Red" FontSize="9" Grid.Row="6" Margin="84,0,0,82" Grid.RowSpan="2"/>
        <Label Content="*" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="18" FontSize="10" Margin="26,1,0,0" RenderTransformOrigin="0.522,1.832" Grid.Row="1" Grid.Column="1"/>
        <Label Content="*" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="18" FontSize="10" Margin="26,1,0,0" RenderTransformOrigin="0.522,1.832" Grid.Row="3" Grid.Column="1"/>
        <Label Content="*" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="18" FontSize="10" Margin="26,1,0,0" RenderTransformOrigin="0.522,1.832" Grid.Row="4" Grid.Column="1"/>
        <Label Content="*" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="18" FontSize="10" Margin="26,1,0,0" RenderTransformOrigin="0.522,1.832" Grid.Row="5" Grid.Column="1"/>
        <Label Content="*" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="18" FontSize="10" Margin="26,1,0,0" RenderTransformOrigin="0.522,1.832" Grid.Row="6" Grid.Column="1"/>


    </Grid>
</Window>
