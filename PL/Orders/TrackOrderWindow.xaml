<Window x:Class="Orders.TrackOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Orders"
        mc:Ignorable="d"
        Title="TrackOrderWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="IdLabel" Content="Enter order id for tracking:" HorizontalAlignment="Left" Height="47" Margin="194,44,0,0" VerticalAlignment="Top" Width="324" FontSize="22" FontWeight="Bold" FontFamily="Candara"/>
        <TextBox x:Name="IdTextBox" HorizontalAlignment="Left" Height="33" Margin="465,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" KeyDown="Enter" Width="134" FontSize="22"/>
        <TextBlock x:Name="OrderTrackingBox" Text="{Binding}" HorizontalAlignment="Left" Height="149" TextWrapping="Wrap" VerticalAlignment="Center" Width="436" FontSize="18" Grid.ColumnSpan="2" Margin="182,0,0,0"/>

    </Grid>
</Window>
